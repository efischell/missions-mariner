//************* Deploy behaviors ********************************

//Basic deploy - go to loiter around deploy location
Behavior = BHV_Loiter
{
  name      = deploy_loiter
  pwt = 100
  speed     = $(DEPLOY_SPEED)
  nm_radius = $(NM_RADIUS)
  updates   = SENSOR_DEPLOY
  duration  = no-time-limit
  clockwise = $(LOITER_CLOCKWISE)
  acquire_dist = 5
  condition = MODE == LOITER
  polygon = radial:: x=$(DEPLOY_X),y=$(DEPLOY_Y),radius=$(LOITER_RADIUS),pts=$(LOITER_POINTS)
}
